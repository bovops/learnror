<% if @comment.errors.present? %>
$('form#edit_comment_<%= @comment.id %>').html('<%= j render partial: 'comments/form', locals: {comment: @comment} %>');
<% else %>
$('<%= "#comment_#{@comment.id}" %>').html('<%= j render partial: 'comments/comment', locals: {comment: @comment} %>');
$('#EditCommentForm<%= @comment.id %>').modal('hide');
$('body').removeClass('modal-open');
$('.modal-backdrop').remove();

<% publish_to "/#{@commentable.class.to_s.downcase}s/#{@commentable.id}/comments" do %>
  $('<%= "#comment_#{@comment.id}" %>').html('<%= j render partial: 'comments/comment', locals: {comment: @comment} %>');
<% end %>

<% end %>
