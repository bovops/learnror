<% if resource.errors.present? %>
$('form#edit_comment_<%= resource.id %>').html('<%= j render 'comments/form' %>');
<% else %>
$('<%= "#comment-#{resource.id}" %>').html('<%= j render 'comments/comment' %>');
$('#EditCommentForm<%= resource.id %>').modal('hide');
$('body').removeClass('modal-open');
$('.modal-backdrop').remove();

<% publish_to "/#{parent_type.to_s}s/#{parent.id}/comments" do %>
  $('<%= "#comment-#{resource.id}" %>').html('<%= j render 'comments/comment' %>');
<% end %>

<% end %>
