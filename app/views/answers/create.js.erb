<% if @answer.errors.present? %>
  $('.new_answer_form').html('<%= j render partial: 'questions/answer_form', locals: {answer: @answer, submit: 'Post Your Answer'} %>');
<% else %>
  $('.answers').html('<%= j render 'questions/answers' %>');
  $('.new_answer_form').html('<%= j render partial: 'questions/answer_form', locals: {answer: @question.answers.build, submit: 'Post Your Answer'} %>');
<% end %>
