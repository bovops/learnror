<% if resource.errors.present? %>
  $('.new-answer-form').html('<%= j render 'form', submit: 'Post Your Answer' %>');
<% else %>
  $('.answers').html('<%= j render 'list' %>');
  $('.new-answer-form').html('<%= j render 'form', resource: parent.answers.build, submit: 'Post Your Answer' %>');
<% end %>
