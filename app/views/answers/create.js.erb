<% if @answer.errors.present? %>
$('.new_answer_form').html('<%= j render partial: 'form', locals: {answer: @answer, submit: 'Post Your Answer'} %>');
<% else %>
$('.answers').html('<%= j render 'list' %>');
$('.new_answer_form').html('<%= j render partial: 'form', locals: {answer: @question.answers.build, submit: 'Post Your Answer'} %>');
<% end %>
