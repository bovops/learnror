<% if resource.errors.present? %>
  $('form#edit_answer_<%= resource.id %>').html('<%= j render 'form', resource: resource, submit: 'Update Your Answer' %>');
<% else %>
  $('.answers').html('<%= j render 'list' %>');
  $('#EditAnswerForm<%= resource.id %>').modal('hide');
  $('body').removeClass('modal-open');
  $('.modal-backdrop').remove();
<% end %>
