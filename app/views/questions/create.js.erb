<% if @question.errors.present? %>
  $('#new_question').html('<%= j render 'questions/form' %>');
<% else %>
  <% publish_to "/questions" do %>
    $('.questions-box .questions-list').append('<%= j render 'questions_list', question: @question %>');
  <% end %>
  $('#NewQuestionForm').modal('hide');
  $('body').removeClass('modal-open');
  $('.modal-backdrop').remove();
  window.location = "<%= question_path(@question) %>"
<% end %>
