<% if @question.errors.present? %>
$('form#edit_question_<%= @question.id %>').html('<%= j render partial: 'form', locals: {submit: 'Update Question'} %>');
<% else %>
$('.question').html('<%= j render 'question' %>');
$('#EditQuestionForm').modal('hide');
$('body').removeClass('modal-open');
$('.modal-backdrop').remove();
<% end %>
